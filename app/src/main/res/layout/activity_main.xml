<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/allphi_logo" />

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo">

        <Button
            android:id="@+id/btnDrivers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/drivers"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:elevation="4dp"
            android:padding="12dp"
            android:drawableStart="@drawable/ic_driver"
            android:drawableTint="@color/white"
            android:drawablePadding="8dp"
            app:iconTint="@android:color/white" />

        <Button
            android:id="@+id/btnVehicles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/vehicles"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:elevation="4dp"
            android:padding="12dp"
            android:drawableStart="@drawable/ic_vehicle"
            android:drawableTint="@color/white"
            android:drawablePadding="8dp"
            app:iconTint="@android:color/white" />

        <Button
            android:id="@+id/btnFuelCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/gas_cards"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:elevation="4dp"
            android:padding="12dp"
            android:drawableStart="@drawable/ic_card"
            android:drawableTint="@color/white"
            android:drawablePadding="8dp"
            app:iconTint="@android:color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
