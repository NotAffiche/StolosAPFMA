<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFACCE"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_margin="15sp"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="Card Number:" />

        <TextView
            android:id="@+id/tvCardNumberVal"
            android:layout_width="180sp"
            android:layout_height="53sp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            tools:text="Cardnum" />
        <EditText
            android:id="@+id/evCardNumber"
            android:layout_width="180sp"
            android:layout_height="53sp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="Cardnum" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvExpiringDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="Expiring Date:" />

        <TextView
            android:id="@+id/tvExpiringDateDisplayValue"
            android:layout_width="180sp"
            android:layout_height="53sp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="Exp dat"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPincode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="Pincode:" />

        <EditText
            android:id="@+id/evPincode"
            android:layout_width="180sp"
            android:layout_height="53sp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="Pin"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvFuelTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="Fuel types:" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFuelTypesSelect"
                android:layout_width="180sp"
                android:layout_height="53sp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:hint="Fueltypes"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/tvFuelTypesSelect"
                android:layout_alignBottom="@id/tvFuelTypesSelect"
                android:src="@drawable/ic_arrow_down"
                />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBlocked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="Blocked:" />

        <CheckBox
            android:id="@+id/cbBlocked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="Driver Id:" />

        <EditText
            android:id="@+id/evDriver"
            android:layout_width="180sp"
            android:layout_height="53sp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="Drv id"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="150sp"
            android:layout_height="55sp"
            android:layout_alignParentLeft="true"
            android:text="SAVE" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="150sp"
            android:layout_height="55sp"
            android:layout_alignParentRight="true"
            android:text="DELETE" />
    </RelativeLayout>


</LinearLayout>